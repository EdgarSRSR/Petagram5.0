<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.solrom.edgar.petagram50.fragment.PrincipalFragment">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/shibainu"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="#8BC34A"/>

    <TextView
        android:id="@+id/tv_nombre_mascota"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:text="@string/nombre_mi_mascota"
        android:layout_below="@+id/imvPrincipal"
        android:gravity="center_vertical|center_horizontal"
        android:textAlignment="center"
        android:textSize="@dimen/margin_top" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvFotos"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/tvNombreMiMascota"
        >
    </android.support.v7.widget.RecyclerView>


</LinearLayout>